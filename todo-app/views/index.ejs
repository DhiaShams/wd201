<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <title>Todo App</title>
    <link rel="stylesheet" href="./css/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <script>
      var token = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
    
      // Function to update a todo's completion status
      function updateTodo(id, currentStatus) {
        fetch(`/todos/${id}`, {
          method: "PUT",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            completed: !currentStatus, // Toggle the current status
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload(); // Reload the page to reflect changes
            } else {
              console.error("Failed to update todo");
            }
          })
          .catch((err) => console.error("Error:", err));
      }
    
      // Function to delete a todo
      function deleteTodo(id) {
        fetch(`/todos/${id}`, {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload(); // Reload the page to reflect changes
            } else {
              console.error("Failed to delete todo");
            }
          })
          .catch((err) => console.error("Error:", err));
      }

  // Function to toggle a todo's completion status
  function toggleTodo(id, currentStatus) {
    fetch(`/todos/${id}`, {
      method: "PUT",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        completed: !currentStatus, // Toggle the current status
        _csrf: token,
      }),
    })
      .then((res) => {
        if (res.ok) {
          return res.json();
        } else {
          throw new Error("Failed to update todo");
        }
      })
      .then((updatedTodo) => {
        console.log("Todo updated:", updatedTodo);
        // Dynamically update the checkbox and move the todo to the correct section
        const checkbox = document.getElementById(`todo-${id}`);
        checkbox.checked = updatedTodo.completed;

        // Optionally reload the page or dynamically update the DOM
        location.reload(); // Reload the page to reflect changes
      })
      .catch((err) => console.error("Error:", err));
  }
    </script>
  </head>
  <body class="bg-gray-100">
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
        <%- include('header.ejs') %>
      <form action="/todos" method="post" class="flex justify-center mb-8">
        <input type="text" name="title" placeholder="Enter todo" required class="border p-2 rounded-l w-64" />
        <input type="date" name="dueDate" required class="border p-2" />
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="bg-green-500 text-white p-2 rounded-r hover:bg-blue-600">Add Todo</button>
      </form>

      <!-- Todo Lists Section -->
      <%- include('todos.ejs') %>
      </div>
    </div>
  </body>
</html>