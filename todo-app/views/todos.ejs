<!-- Overdue Section -->
<div class="flex mb-4">
  <h5 class="text-xl">Overdue</h5>
  <div class="bg-gray-200 px-2.5 py-0.5 rounded text-base ml-2" id="count-overdue"><%= overdueCount %></div>
</div>
<ul class="list-none" id="overdue-list">
  <% overdueTodos.forEach(function(todo) { %>
    <li id="todo-item-<%= todo.id %>" class="todo-item">
      <div class="flex items-center w-fit my-2 px-2 py-1 hover:bg-purple-50 rounded group">
        <input type="checkbox" id="todo-<%= todo.id %>" class="w-4 h-4 text-blue-600 border-gray-300 bg-gray-100" <%= todo.completed ? 'checked' : '' %> onclick="toggleTodo(<%= todo.id %>, <%= todo.completed %>)">
        <label for="todo-<%= todo.id %>" class="ml-2"><%= todo.title %> - <%= todo.dueDate %></label>
        <a href="#" role="button" aria-label="Delete Todo" class="hidden trash-icon ml-2" onclick="deleteTodo(<%= todo.id %>)">
